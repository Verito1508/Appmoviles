<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvTituloElementoEvento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Team Meeting about Project X"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:maxLines="2"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvEstadoElementoEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Pending"
                android:textAppearance="?attr/textAppearanceCaption"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/insignia_estado_pendiente"
                android:textColor="@color/white"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_categoria"
                app:tint="?attr/colorControlNormal"
                android:layout_marginEnd="4dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/tvCategoriaElementoEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Junta"
                android:textAppearance="?attr/textAppearanceBody2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_rango_fecha"
                app:tint="?attr/colorControlNormal"
                android:layout_marginEnd="4dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/tvFechaHoraElementoEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="25/12/2024 - 10:00 AM"
                android:textAppearance="?attr/textAppearanceBody2"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutContactoElementoEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            tools:visibility="visible">            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_contactos"
                app:tint="?attr/colorControlNormal"
                android:layout_marginEnd="4dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/tvContactoElementoEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Alejandro"
                android:textAppearance="?attr/textAppearanceBody2"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutUbicacionElementoEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            tools:visibility="visible">            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_localizacion"
                app:tint="?attr/colorControlNormal"
                android:layout_marginEnd="4dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/tvUbicacionElementoEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Office Building, Room 301"
                android:textAppearance="?attr/textAppearanceBody2"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>